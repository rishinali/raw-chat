<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RawChat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--  Main Toolbar text color  -->
        <item name="colorMainToolbar">@color/blue</item>
        <item name="colorOnMainToolbar">@color/white</item>

        <!--  Auth Toolbar text color  -->
        <item name="colorAuthToolbar">@color/white</item>
        <item name="colorOnAuthToolbar">@color/black</item>

    </style>

    <!-- Custom TextInputLayout -->
    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textInputLayoutFocusedRectEnabled">true</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <!--        <item name="boxStrokeColor">?attr/colorSecondary</item>-->
        <!--        <item name="hintTextColor">?attr/colorSecondary</item>-->
    </style>

    <!-- Custom ProgressBar -->
    <style name="ProgressBarTheme" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <!-- Custom ProgressBar ImageSent -->
    <style name="ImageMsgSentProgressBarTheme" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>